# ═══════════════════════════════════════════════════════════════════════════════
# DZ-RentIt — Environment Variables
# ═══════════════════════════════════════════════════════════════════════════════
# Copy this file to .env and fill in your values.
# Never commit the actual .env file to version control.
# ═══════════════════════════════════════════════════════════════════════════════

# ── Django Core ──────────────────────────────────────────────────────────────
# Set to "production" to activate prod.py settings
DJANGO_ENV=dev

# REQUIRED in production — generate with:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-to-a-real-secret-key

# DEBUG is force-set by dev.py/prod.py, but can be overridden
# DEBUG=False

# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1

# ── Database ─────────────────────────────────────────────────────────────────
# Option A: Full DATABASE_URL (preferred for PaaS platforms)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/dzrentit

# Option B: Not needed if DATABASE_URL is set — these are parsed from the URL
# DB_NAME=dzrentit
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432

# ── CORS ─────────────────────────────────────────────────────────────────────
# In dev: CORS_ALLOW_ALL_ORIGINS=True is set automatically
# In prod: list allowed frontend origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ── JWT ──────────────────────────────────────────────────────────────────────
ACCESS_TOKEN_LIFETIME_MINUTES=30
REFRESH_TOKEN_LIFETIME_DAYS=7

# ── Pagination ───────────────────────────────────────────────────────────────
PAGE_SIZE=20

# ── SSL (production) ────────────────────────────────────────────────────────
# Set to False if your PaaS handles SSL termination at the load balancer
# SECURE_SSL_REDIRECT=True

